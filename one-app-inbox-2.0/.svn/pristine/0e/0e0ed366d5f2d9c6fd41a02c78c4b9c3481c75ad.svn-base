    .button1 {
		padding: 5px 10px;
		display: inline;
		background: #777 repeat-x bottom;
		border: none;
		color: #fff !important;
		cursor: pointer;
		font-weight: bold;
		border-radius: 5px;
		-moz-border-radius: 5px;
		-webkit-border-radius: 5px;
		text-shadow: 1px 1px #666;
		}
	.button1:hover {
		background-position: 0 center;
		}
	.button1:active {
		background-position: 0 top;
		position: relative;
		top: 1px;
		padding: 6px 10px 4px;
		}

	.button1.red { background-color: #e50000; }
	.button1.purple { background-color: #9400bf; }
	.button1.green { background-color: #58aa00; }
	.button1.orange { background-color: #ff9c00; }
	.button1.blue { background-color: #2c6da0; }
	.button1.black { background-color: #333; }
	.button1.white { background-color: #fff; color: #000; text-shadow: 1px 1px #fff; }
	
.button1.small { font-size: 75%; padding: 3px 7px; }
.button1.small:hover { background-position: 0 -50px; }
.button1.small:active { padding: 4px 7px 2px; background-position: 0 top; }
.button1.large { font-size: 125%; padding: 7px 12px; }
.button1.large:hover { background-position: 0 -35px; }
.button1.large:active { padding: 8px 12px 6px; background-position: 0 top; }